<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="709.0" prefWidth="953.0" style="-fx-background-color: #2F333D;" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.nhanKhau.NhanKhauController">
    <children>
      <Pane fx:id="mainPane" prefHeight="700.0" prefWidth="1180.0">
         <children>
            <Label layoutX="388.0" layoutY="14.0" text="Quản lý thông tin nhân khẩu" textFill="#f8f3f3">
               <font>
                  <Font name="System Bold" size="30.0" />
               </font>
            </Label>
              <TableView fx:id="table" layoutX="70.0" layoutY="175.0" prefHeight="433.0" prefWidth="822.0">
                  <columns>
                      <TableColumn fx:id="idColumn" prefWidth="107.0" style="-fx-background-color: #F1D4A7; -fx-border-color: #C0811F;" text="ID nhân khẩu" />
                      <TableColumn fx:id="hoTenColumn" prefWidth="198.0" style="-fx-background-color: #F1D4A7; -fx-border-color: #C0811F;" text="Họ tên" />
                      <TableColumn fx:id="ngaySinhColumn" prefWidth="109.0" style="-fx-background-color: #F1D4A7; -fx-border-color: #C0811F;" text="Ngày sinh " />
                      <TableColumn fx:id="gioiTinhColumn" prefWidth="122.0" style="-fx-background-color: #F1D4A7; -fx-border-color: #C0811F;" text="Giới tính" />
                      <TableColumn fx:id="CMNDColumn" minWidth="0.0" prefWidth="149.0" style="-fx-background-color: #F1D4A7; -fx-border-color: #C0811F;" text="CMND" />
                  <TableColumn fx:id="trangThaiColumn" prefWidth="136.0" style="-fx-background-color: #F1D4A7; -fx-border-color: #C0811F;" text="Trạng thái" />
      
                        </columns>
                  <contextMenu>
                      <ContextMenu>
                          <items>
                              <MenuItem mnemonicParsing="false" onAction="#detailNhanKhau" text="Xem thông tin nhân khẩu" />
                              <MenuItem mnemonicParsing="false" onAction="#chinhSuaNK" text="Chỉnh sửa thông tin nhân khẩu" />
                              <MenuItem mnemonicParsing="false" text="Xóa thông tin nhân khẩu" />
                              <MenuItem mnemonicParsing="false" onAction="#tamVang" text="Khai báo tạm vắng" />
                              <MenuItem mnemonicParsing="false" onAction="#chuyenNK" text="Chuyển nhân khẩu đi nơi khác" />
                              <MenuItem mnemonicParsing="false" onAction="#khaiTu" text="Khai tử" />
                              <MenuItem mnemonicParsing="false" onAction="#tamTru" text="Khai báo tạm trú" />
                          </items>
                      </ContextMenu>
                  </contextMenu>
              </TableView>
            <Button fx:id="themNhanKhau" layoutX="912.0" layoutY="175.0" mnemonicParsing="false" onAction="#changScenceThemNhanKhau" style="-fx-background-color: #F1D4A7;" text="Thêm nhân khẩu">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Button>
             <Pane layoutX="170.0" layoutY="107.0" prefHeight="50.0" prefWidth="705.0" style="-fx-background-color: #FFFFC9; -fx-background-radius: 30;">
                 <children>
                     <ImageView fitHeight="50.0" fitWidth="53.0" layoutX="656.0" pickOnBounds="true" preserveRatio="true">
                         <image>
                             <Image url="@../../image/search.png" />
                         </image>
                     </ImageView>
                     <TextField layoutX="68.0" prefHeight="50.0" prefWidth="369.0" promptText="Nhập dữ liệu cần tra cứu" style="-fx-background-color: 0;">
                         <font>
                             <Font size="15.0" />
                         </font>
                     </TextField>
                     <ComboBox layoutX="445.0" prefHeight="49.0" prefWidth="196.0" promptText="Chọn trường tra cứu" style="-fx-font-size: 15; -fx-background-radius: 15; -fx-background-color: #F1D4A7;" />
                 </children>
             </Pane>
         </children>
      </Pane>
    </children>
</AnchorPane>
